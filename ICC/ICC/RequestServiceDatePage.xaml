<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICC.RequestServiceDatePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="When do you want to schedule this service?"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <DatePicker x:Name="serviceDatePicker"
                 MinimumDate="04/23/2019"
                 MaximumDate="04/23/2020" />
            <TimePicker x:Name="serviceTimePicker" />

            <Button Text="Select"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                    FontSize="Large"
                Clicked="OnClickSelect" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>